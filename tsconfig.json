{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
